#!/bin/bash

# Forensic Legal Analyzer Launcher Script
# Improved version with proper error handling and cleanup

set -e  # Exit on error

# Get the directory of this script and locate Resources
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
RESOURCES_DIR="$SCRIPT_DIR/../Resources"
PID_FILE="/tmp/ForensicLegalAnalyzer_$USER.pid"
LOG_FILE="/tmp/ForensicLegalAnalyzer_$USER.log"
PORT=8765

# Cleanup function - called on exit
cleanup() {
    local exit_code=$?
    echo "$(date '+%Y-%m-%d %H:%M:%S') - Cleanup initiated" >> "$LOG_FILE"

    # Kill server if PID file exists
    if [ -f "$PID_FILE" ]; then
        local server_pid=$(cat "$PID_FILE")
        if ps -p "$server_pid" > /dev/null 2>&1; then
            echo "$(date '+%Y-%m-%d %H:%M:%S') - Stopping server (PID: $server_pid)" >> "$LOG_FILE"
            kill "$server_pid" 2>/dev/null || true
            # Wait for process to die
            for i in {1..10}; do
                if ! ps -p "$server_pid" > /dev/null 2>&1; then
                    break
                fi
                sleep 0.5
            done
            # Force kill if still running
            if ps -p "$server_pid" > /dev/null 2>&1; then
                kill -9 "$server_pid" 2>/dev/null || true
            fi
        fi
        rm -f "$PID_FILE"
    fi

    # Clean up any orphaned python servers on our port
    lsof -ti tcp:"$PORT" 2>/dev/null | xargs kill -9 2>/dev/null || true

    echo "$(date '+%Y-%m-%d %H:%M:%S') - Cleanup completed (exit code: $exit_code)" >> "$LOG_FILE"

    if [ $exit_code -eq 0 ]; then
        osascript -e 'display notification "Forensic Legal Analyzer has been stopped" with title "Application Closed"' 2>/dev/null || true
    fi
}

# Set up trap to ensure cleanup runs on exit
trap cleanup EXIT INT TERM

# Error handler
error_exit() {
    local message="$1"
    echo "$(date '+%Y-%m-%d %H:%M:%S') - ERROR: $message" >> "$LOG_FILE"
    osascript -e "display dialog \"$message\" buttons {\"OK\"} default button 1 with icon stop" 2>/dev/null || echo "ERROR: $message"
    exit 1
}

# Initialize log file
echo "$(date '+%Y-%m-%d %H:%M:%S') - Starting Forensic Legal Analyzer..." > "$LOG_FILE"

# Check if Python 3 is available
if ! command -v python3 &> /dev/null; then
    error_exit "Python 3 is required to run Forensic Legal Analyzer.\n\nPlease install Python 3 from python.org"
fi

echo "$(date '+%Y-%m-%d %H:%M:%S') - Python 3 found: $(which python3)" >> "$LOG_FILE"

# Verify Resources directory exists
if [ ! -d "$RESOURCES_DIR" ]; then
    error_exit "Resources directory not found at: $RESOURCES_DIR\n\nThe application bundle may be corrupted."
fi

# Verify index.html exists
if [ ! -f "$RESOURCES_DIR/index.html" ]; then
    error_exit "index.html not found in Resources directory.\n\nThe application bundle may be corrupted."
fi

echo "$(date '+%Y-%m-%d %H:%M:%S') - Resources directory verified: $RESOURCES_DIR" >> "$LOG_FILE"

# Check if port is already in use
if lsof -Pi :$PORT -sTCP:LISTEN -t >/dev/null 2>&1; then
    echo "$(date '+%Y-%m-%d %H:%M:%S') - Port $PORT already in use, attempting cleanup..." >> "$LOG_FILE"
    lsof -ti tcp:$PORT | xargs kill -9 2>/dev/null || true
    sleep 1
    # Check again
    if lsof -Pi :$PORT -sTCP:LISTEN -t >/dev/null 2>&1; then
        error_exit "Port $PORT is already in use by another application.\n\nPlease close the application using port $PORT and try again."
    fi
fi

# Clean up any existing PID file
rm -f "$PID_FILE"

# Navigate to Resources directory
cd "$RESOURCES_DIR" || error_exit "Failed to navigate to Resources directory"

echo "$(date '+%Y-%m-%d %H:%M:%S') - Starting HTTP server on port $PORT..." >> "$LOG_FILE"

# Start the local server in background
python3 -m http.server $PORT >> "$LOG_FILE" 2>&1 &
SERVER_PID=$!

# Save PID to file
echo "$SERVER_PID" > "$PID_FILE"

echo "$(date '+%Y-%m-%d %H:%M:%S') - Server started with PID: $SERVER_PID" >> "$LOG_FILE"

# Wait for server to start and verify it's running
sleep 2

if ! ps -p $SERVER_PID > /dev/null 2>&1; then
    error_exit "Failed to start HTTP server.\n\nCheck $LOG_FILE for details."
fi

# Verify server is responding
max_retries=5
for i in $(seq 1 $max_retries); do
    if curl -s "http://localhost:$PORT" > /dev/null 2>&1; then
        echo "$(date '+%Y-%m-%d %H:%M:%S') - Server is responding on http://localhost:$PORT" >> "$LOG_FILE"
        break
    fi
    if [ $i -eq $max_retries ]; then
        error_exit "Server started but is not responding.\n\nCheck $LOG_FILE for details."
    fi
    sleep 1
done

# Open the application in default browser
echo "$(date '+%Y-%m-%d %H:%M:%S') - Opening browser..." >> "$LOG_FILE"
open "http://localhost:$PORT/index.html" || error_exit "Failed to open browser.\n\nPlease open http://localhost:$PORT/index.html manually."

# Display success notification
osascript -e 'display notification "Forensic Legal Analyzer is now running on http://localhost:8765" with title "Application Started"' 2>/dev/null || true

echo "$(date '+%Y-%m-%d %H:%M:%S') - Application started successfully" >> "$LOG_FILE"
echo "Server running on http://localhost:$PORT"
echo "Log file: $LOG_FILE"
echo "Press Ctrl+C to stop the server, or close this window"

# Wait for the server process
wait $SERVER_PID
